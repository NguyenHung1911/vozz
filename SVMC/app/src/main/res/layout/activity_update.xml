<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity">

    <TextView
        android:id="@+id/add_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update nghiệm vụ"
        android:textSize="25dp"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        />
    <EditText
        android:id="@+id/add_NameNV"
        app:layout_constraintTop_toBottomOf="@+id/add_tv"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập tên nghiệm vụ"
        />
    <EditText
        android:id="@+id/add_DateNV"
        app:layout_constraintTop_toBottomOf="@+id/add_NameNV"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập ngày thực hiện nghiệm vụ"
        />
    <EditText
        android:id="@+id/add_TimeStartNV"
        app:layout_constraintTop_toBottomOf="@+id/add_DateNV"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập thời gian bắt đầu nghiệm vụ"
        />
    <EditText
        android:id="@+id/add_TimeEndNV"
        app:layout_constraintTop_toBottomOf="@+id/add_TimeStartNV"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập thời gian kết thúc nghiệm vụ"
        />
    <EditText
        android:id="@+id/add_ContentNV"
        app:layout_constraintTop_toBottomOf="@+id/add_TimeEndNV"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:gravity="top"
        android:hint="Nhập nội dung nghiệm vụ"
        />

    <Button
        android:id="@+id/add_micbt"
        app:layout_constraintTop_toBottomOf="@+id/add_ContentNV"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="-40dp"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_mic"

        />
    <Button
        android:id="@+id/add_canclebt"
        app:layout_constraintTop_toBottomOf="@+id/add_ContentNV"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="30dp"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:text="Cancle"
        android:textSize="20dp"
        android:background="@color/pink"
        />
    <Button
        android:id="@+id/add_savebt"
        app:layout_constraintTop_toBottomOf="@+id/add_ContentNV"
        app:layout_constraintLeft_toRightOf="@+id/add_canclebt"
        app:layout_constraintRight_toLeftOf="@id/add_donebt"
        android:layout_marginTop="30dp"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="Save"
        android:textSize="20dp"
        android:background="@color/pink"
        />
    <Button
        android:id="@+id/add_donebt"
        app:layout_constraintTop_toBottomOf="@+id/add_ContentNV"
        app:layout_constraintLeft_toRightOf="@+id/add_savebt"
        android:layout_marginTop="30dp"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:text="DONE"
        android:textSize="20dp"
        android:background="@color/pink"
        app:layout_constraintRight_toRightOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>